{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "ignoreDeprecations": "5.0",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "types": ["node"]
    },
    "include": ["src/**/*", "examples/**/*"],
    "exclude": ["node_modules", "src/templates/**/*"]
}
